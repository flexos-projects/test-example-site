---
interface Props extends AstroHTML.JSX.AnchorHTMLAttributes<"a">, AstroHTML.JSX.ButtonHTMLAttributes<"button"> {
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
}

const {
  variant = 'outline',
  size = 'md',
  href,
  class: className,
  ...attrs
} = Astro.props;

const baseClasses = `
  font-['Inter']
  inline-flex items-center justify-center
  rounded-sm
  shadow-md
  transition-all duration-300 ease-in-out
  focus:outline-none focus:ring-2 focus:ring-offset-2
  whitespace-nowrap
`;

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg',
};

const variantClasses = {
  primary: `
    bg-[#81A4BB] text-white border border-[#81A4BB]
    hover:bg-transparent hover:text-[#81A4BB]
    focus:ring-[#81A4BB] focus:ring-offset-[#ffffff]
  `,
  secondary: `
    bg-[#A4C4D9] text-white border border-[#A4C4D9]
    hover:bg-transparent hover:text-[#A4C4D9]
    focus:ring-[#A4C4D9] focus:ring-offset-[#ffffff]
  `,
  outline: `
    bg-transparent text-[#333333] border border-[#888888]
    hover:bg-[#888888] hover:text-white
    focus:ring-[#888888] focus:ring-offset-[#ffffff]
  `,
};

const allClasses = `${baseClasses} ${sizeClasses[size]} ${variantClasses[variant]} ${className || ''}`;
---

{href ? (
  <a href={href} class={allClasses} {...attrs}>
    <slot />
  </a>
) : (
  <button class={allClasses} {...attrs}>
    <slot />
  </button>
)}