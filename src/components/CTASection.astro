---
interface Props {
  headline: string;
  description: string;
  buttonText: string;
  buttonLink: string;
}

const { headline, description, buttonText, buttonLink } = Astro.props;
---

<section class="py-16 sm:py-20 md:py-24 bg-[#A4C4D9] font-['Inter']" aria-label="Call to action section">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-[#ffffff] shadow-lg rounded-sm p-8 sm:p-10 md:p-12 text-center">
      <h2 class="font-['IBM_Plex_Sans'] text-3xl sm:text-4xl md:text-5xl font-bold text-[#000000] mb-6 sm:mb-8 leading-tight">
        {headline}
      </h2>
      <p class="text-base sm:text-lg text-[#333333] mb-8 sm:mb-10 max-w-2xl mx-auto leading-relaxed">
        {description}
      </p>
      <a
        href={buttonLink}
        class="inline-flex items-center justify-center px-8 py-3 text-base sm:text-lg font-medium
               border-2 border-[#A2D9D0] text-[#A2D9D0] bg-transparent
               rounded-sm shadow-md
               transition-all duration-300 ease-in-out
               hover:bg-[#A2D9D0] hover:text-[#1A1A1A]
               focus:outline-none focus:ring-2 focus:ring-[#A2D9D0] focus:ring-offset-2 focus:ring-offset-[#ffffff]"
        aria-label={buttonText}
      >
        {buttonText}
      </a>
    </div>
  </div>
</section>